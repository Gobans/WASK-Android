<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:homeAsUpIndicator">@drawable/setting_on_ic_back</item>
    </style>

    <style name="WaskDialogText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/waskGrayFont</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WaskDialogButtonText" parent="WaskDialogText">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/dividerGray</item>
    </style>

    <style name="SwitchThumb" parent="Widget.AppCompat.CompoundButton.Switch">

        <item name="android:colorForeground">#ffffff</item>
        <item name="android:colorControlActivated">#ffffff</item>
    </style>

</resources>